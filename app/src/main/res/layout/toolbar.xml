<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="120px"
    android:background="@color/teal800"
    android:minHeight="?attr/actionBarSize"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    <ImageView
        android:id="@+id/toolBarFlagFrom"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginRight="16dp"
        ></ImageView>
    <TextView
        android:id="@+id/sourceLanguage"
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="English (U..."
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/White" android:layout_marginRight="15px" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="35px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@drawable/translateicon"></ImageView>
    <TextView
        android:id="@+id/targetLanguage"
        android:textColor="@color/White"
        android:layout_width="wrap_content"
        android:text="Japanese"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_margin="10dp"
        android:textSize="16sp"/>
    <ImageView
        android:id="@+id/toolBarFlagTo"
        android:layout_width="80px"
        android:layout_height="80px"
        ></ImageView>

</android.support.v7.widget.Toolbar>